<Language Name="English" IsDefault="false" IsRightToLeft="false">

	<!-- Friendly plugin backend name & description (e.g. in payment configuration list) -->
	<LocaleResource Name="Plugins.FriendlyName.Smartstore.PayPal" AppendRootKey="false">
		<Value>PayPal</Value>
	</LocaleResource>
	<LocaleResource Name="Plugins.Description.Smartstore.PayPal" AppendRootKey="false">
		<Value>Adds the PayPal payment feature to the store.</Value>
	</LocaleResource>

	<!-- Friendly provider name & description -->
	<!-- Frontend payment option & backend -->
	<LocaleResource Name="Plugins.FriendlyName.Payments.PayPalStandard" AppendRootKey="false">
		<Value>PayPal</Value>
	</LocaleResource>
	<!-- Backend provider description -->
	<LocaleResource Name="Plugins.Description.Payments.PayPalStandard" AppendRootKey="false">
		<Value>
			<![CDATA[
				Opens a secure payment window where the payment is made directly at PayPal.
      ]]>
		</Value>
	</LocaleResource>

	<!-- Should be rendered in frontend by default. As long as the shop admin doesn't enter a FullDescription for the PaymentMethod -->
	<LocaleResource Name="Plugins.PaymentInfo.Payments.PayPalStandard" AppendRootKey="false">
		<Value>
			<![CDATA[
				Do the payment in a secure browser window directly at PayPal. 
				After redirection back to the store, you can complete the order with a few clicks.
      ]]>
		</Value>
	</LocaleResource>
	
  <LocaleResource Name="Plugins.Smartstore.PayPal" AppendRootKey="false">
    <Children>
      <LocaleResource Name="AdminInstruction">
        <Value>
          <![CDATA[
            <p>
							To set up PayPal in your store follow the steps in the following guide.
						</p>
						<ul>
							<li>Sign in with your PayPal account details <a href="https://developer.paypal.com/developer/applications" target="_blank">in the developer dashboard</a>.</li>
							<li>Create a new app by clicking on the <b>Create App</b> button.</li>
							<li>Now enter the account, client ID and secret in the fields provided further down this page.</li>
							<li>Create a webhook and store the URL below as the webhook URL in your PayPal app.</li>
							<li>Enable notifications for all events.</li>
						</ul>
          ]]>
        </Value>
      </LocaleResource>      
			
      <LocaleResource Name="UseSandbox">
        <Value>Use sandbox</Value>
      </LocaleResource>
      <LocaleResource Name="UseSandbox.Hint">
