@model BlogListModel

@{
    var isSingleStoreMode = (bool)ViewBag.IsSingleStoreMode;
    var isSingleLanguageMode = (bool)ViewBag.IsSingleLanguageMode;
}

<div class="form-group">
    <smart-label asp-for="SearchTitle" />
    <editor asp-for="SearchTitle" asp-template="SearchExpression" />
</div>
<div class="form-group">
    <smart-label asp-for="SearchIntro" />
    <editor asp-for="SearchIntro" asp-template="SearchExpression" />
</div>
<div class="form-group">
    <smart-label asp-for="SearchBody" />
    <editor asp-for="SearchBody" asp-template="SearchExpression" />
</div>
<div class="form-group">
    <smart-label asp-for="SearchTags" />
    <select asp-for="SearchTags" asp-items="@Model.SearchAvailableTags">
        <option>@T("Common.Unspecified")</option>
    </select>
</div>
<div class="form-group">
    <smart-label asp-for="SearchStartDate" />
    <editor asp-for="SearchStartDate" />
</div>
<div class="form-group">
    <smart-label asp-for="SearchEndDate" />
    <editor asp-for="SearchEndDate" />
</div>
<div sm-if="!isSingleStoreMode" class="form-group">
    <smart-label asp-for="SearchStoreId" />
    <editor asp-for="SearchStoreId" />
</div>
<div sm-if="!isSingleLanguageMode" class="form-group">
    <smart-label asp-for="SearchLanguageId" />
    <select asp-for="SearchLanguageId" asp-items="ViewBag.AvailableLanguages">
        <option>@T("Common.International")</option>
    </select>
</div>
<div class="form-group">
    <smart-label asp-for="SearchIsPublished" />
    <editor asp-for="SearchIsPublished" />
</div>