@using Smartstore.Admin.Models.Common

@model QuantityUnitModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

@(Html.LocalizedEditor<QuantityUnitModel, QuantityUnitLocalizedModel>("quantity-unit-localized",
    @<div class="adminContent">
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="Locales[item].Name" />
            </div>
            <div class="adminData">
				@*IMPORTANT: Do not delete, this hidden element contains the id to assign localized values to the corresponding language *@
                <input asp-for="Locales[item].LanguageId" type="hidden" />

                <input asp-for="Locales[item].Name" />
                <span asp-validation-for="Locales[item].Name"></span>
            </div>
        </div>
         <div class="adminRow">
             <div class="adminTitle">
                 <smart-label asp-for="Locales[item].NamePlural" />
             </div>
             <div class="adminData">
                 <input asp-for="Locales[item].NamePlural" />
                 <span asp-validation-for="Locales[item].NamePlural"></span>
             </div>
         </div>
         <div class="adminRow">
             <div class="adminTitle">
                 <smart-label asp-for="Locales[item].Description" />
             </div>
             <div class="adminData">
                 <input asp-for="Locales[item].Description" />
                 <span asp-validation-for="Locales[item].Description"></span>
             </div>
         </div>
    </div>
    ,
    @<div class="adminContent">
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="Name" />
            </div>
            <div class="adminData">
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="NamePlural" />
            </div>
            <div class="adminData">
                <input asp-for="NamePlural" />
                <span asp-validation-for="NamePlural"></span>
            </div>
        </div>
         <div class="adminRow">
             <div class="adminTitle">
                 <smart-label asp-for="Description" />
             </div>
             <div class="adminData">
                 <input asp-for="Description" />
                 <span asp-validation-for="Description"></span>
             </div>
         </div>
    </div>
))

<div class="adminContent">
    <div class="adminRow">
        <div class="adminTitle">
            <smart-label asp-for="DisplayOrder" />
        </div>
        <div class="adminData">
            <editor asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder"></span>
        </div>
    </div>
    <div class="adminRow">
        <div class="adminTitle">
            <smart-label asp-for="IsDefault" />
        </div>
        <div class="adminData">
            <input asp-for="IsDefault" />
            <span asp-validation-for="IsDefault"></span>
        </div>
    </div>
</div>
