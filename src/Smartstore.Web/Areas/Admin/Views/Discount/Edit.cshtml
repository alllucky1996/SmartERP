@model DiscountModel

@{
    ViewBag.Title = T("Admin.Promotions.Discounts.EditDiscountDetails") + " - " + Model.Name;
}

<form asp-action="Edit">
    <div class="section-header">
        <div class="title">
            <i class="fa fa-signal fa-flip-horizontal"></i>
            <span>@ViewBag.Title</span>
            <a asp-action="List">(@T("Admin.Common.BackToList"))</a>
        </div>
        <div class="options">
            <zone name="admin_button_toolbar_before" />

            <button type="submit" name="save" value="save" class="btn btn-warning">
                <i class="fa fa-check"></i>
                <span>@T("Admin.Common.Save")</span>
            </button>
            <button type="submit" name="save" value="save-continue" class="btn btn-secondary">
                <span>@T("Admin.Common.SaveContinue")</span>
            </button>
            <button type="submit" id="discount-delete" name="discount-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                <span>@T("Admin.Common.Delete")</span>
            </button>
            <confirm button-id="discount-delete" />

            <zone name="admin_button_toolbar_after" />
        </div>
    </div>

    <partial name="_CreateOrUpdate" />
</form>