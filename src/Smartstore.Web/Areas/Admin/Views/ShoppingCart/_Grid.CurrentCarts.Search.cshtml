@model CurrentCartListModel

@{
    var stores = ViewBag.Stores as IList<SelectListItem>;
}

<div class="form-group">
    <smart-label asp-for="StartDate" />
    <editor asp-for="StartDate" />
</div>
<div class="form-group">
    <smart-label asp-for="EndDate" />
    <editor asp-for="EndDate" />
</div>
<div sm-if="stores.Count > 1" class="form-group">
    <smart-label asp-for="StoreId" />
    <select asp-for="StoreId" asp-items="stores" asp-placeholder="@T("Admin.Common.All")"></select>
</div>
