@using Smartstore.Admin.Models.Common

@model MeasureDimensionModel

@{
    ViewBag.Title = T("Admin.Configuration.Measures.Dimensions.AddDimension").Value;
    Layout = "_AdminPopupLayout";
}

<form asp-action="CreateDimensionPopup" asp-route-btnId="@ViewBag.BtnId" asp-route-formId="@ViewBag.FormId">
    <div class="section-header">
        <div class="title">
            @T("Admin.Configuration.Measures.Dimensions.AddDimension")
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-primary">
                <i class="fa fa-check"></i>
                <span>@T("Admin.Common.Save")</span>
            </button>
        </div>
    </div>

    <partial name="_CreateOrUpdateDimension" model="Model" />
</form>