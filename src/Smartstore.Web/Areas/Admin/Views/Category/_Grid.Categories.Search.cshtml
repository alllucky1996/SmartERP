@model CategoryListModel

@{
    var isSingleStoreMode = (bool)ViewBag.IsSingleStoreMode;
}

<div class="form-group">
    <smart-label asp-for="SearchCategoryName" />
    <editor asp-for="SearchCategoryName" asp-template="SearchExpression" />
</div>
<div class="form-group">
    <smart-label asp-for="SearchAlias" />
    <editor asp-for="SearchAlias" asp-template="SearchExpression" />
</div>
<div sm-if="!isSingleStoreMode" class="form-group">
    <smart-label asp-for="SearchStoreId" />
    <editor asp-for="SearchStoreId" />
</div>