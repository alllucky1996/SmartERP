@model ChoiceModel

@{
    var controlId = Model.BuildControlId();
    var placeholder = Model.Description.RemoveHtml().TrimSafe();
}

<input name="@(controlId)-text" type="text" class="form-control" id="@(controlId)" placeholder="@placeholder" value="@Model.TextValue" attr-disabled='(Model.IsDisabled, "disabled")' />